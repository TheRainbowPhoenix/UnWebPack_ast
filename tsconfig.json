{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "noImplicitAny": true,
    "strict": false,
    "allowJs": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "outDir": "out"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "output", "**/*.spec.ts", "**/*.js"]
}
