    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach Deno",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "timeout": 30000,
        },
        
        {
            "name": "Deno",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/deno",
            "runtimeExecutable": "deno",
            "runtimeArgs": ["run", "--inspect-brk", "-A", "src\\main.ts"],
            "attachSimplePort": 9229,
            "outputCapture": "std"
        }
    ]
}